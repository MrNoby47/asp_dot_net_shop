@model IEnumerable<Category>

    <div class="row p-3 mt-4">
        <div class="col-6">
            <h2 class="text-primary">
                Category List
            </h2>
        </div>
        <div class="col-6 text-end">
            <a class="btn btn-primary" asp-action="Create" asp-controller="Category">Create</a>
        </div>
    </div>

<table class="table table-bordered table-striped" style="width :100%;">
    <thead>
        <tr>
            <th>Name</th>
            <th>Display Order</th>
            <th></th>
        </tr>
       
    </thead>
    <tbody>
       @foreach(var Cat in Model)
       {
           <tr>
               <td width="50%">@Cat.Name</td>
               <td width="30%">@Cat.DisplayOrder</td>
                <td class="w-75 btn-group" role="group">
                    <div>
                        <a class="btn btn-primary mx-2" asp-action="Edit" asp-controller="Category" asp-route-id="@Cat.Id"><i class="bi bi-pencil-square"></i>&nbsp;&nbsp;</a>
                        <a class="btn btn-secondary mx-2" asp-action="Delete" asp-controller="Category" asp-route-id="@Cat.Id"><i class="bi bi-trash"></i>&nbsp;&nbsp;</a>
                    </div>
                   
               </td>
           </tr>
       }
    </tbody>
</table>