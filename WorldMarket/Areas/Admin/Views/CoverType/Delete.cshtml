 @model CoverType

 <form method="post" asp-action="deletePOST">
     <input asp-for="Id" hidden/>
     <div class="p-3 mt-4 border">
         <div class="row pb-2">
             <h2>Delete CoverType</h2>
             <hr />
         </div>
         <div class="mb-3">
             <label asp-for="Name"></label>
             <input asp-for="Name" class="form-control" disabled/>
         </div>
         <div class="mb-3">
             <button class="btn btn-primary" style="width:150px;">Delete</button>
             <a asp-action="Index" asp-controller="CoverType" asp-area="Admin" class="btn btn-secondary" style="width:150px">Back</a>
         </div>
     </div>
 </form>
