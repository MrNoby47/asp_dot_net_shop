@model CoverType

<form method="post" asp-action="Create">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Create CoverType</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control"/>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <button class="btn btn-primary" style="width:150px">Create</button>
            <a asp-action="Index" asp-controller="CoverType" asp-area="Admin" class="btn btn-secondary" style="width:150px;">Back</a>
        </div>
    </div>
</form>