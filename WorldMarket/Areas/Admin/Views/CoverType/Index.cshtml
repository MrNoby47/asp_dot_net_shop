@model IEnumerable<CoverType>

<div class="container p-3">
    <div class="row p-3 mt-4">
        <div class="col-6">
            <h2 class="text-primary">CoverType</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-action="Create" asp-controller="CoverType"  class="btn btn-primary">Create</a>
        </div>
    </div>
    <br /><br />
    <table class="table table-bordered table-striped" style="width:100%;">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach(var cov in Model)
            {
                <tr>
                    <td width="20%">@cov.Id</td>
                    <td width="50%">@cov.Name</td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a class="btn btn-primary mx-2" asp-action="Edit" asp-controller="CoverType" asp-area="Admin" asp-route-id="@cov.Id"><i class="bi bi-pencil-square"></i></a>
                            <a class="btn btn-secondary mx-2" asp-action="Delete" asp-controller="CoverType" asp-area="Admin" asp-route-id="@cov.Id"><i class="bi bi-trash-fill"></i></a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>