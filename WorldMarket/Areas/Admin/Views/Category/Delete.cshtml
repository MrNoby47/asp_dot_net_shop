@model Category

<form method="post" asp-action="DeletePost">
    <input asp-for="Id" hidden />
    <div class="row p-3 mt4">
        <h2 class="text-primary">Delete Category</h2>
        <hr />
    </div>
    
    <div class="mb-3">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" disabled />
    </div>
    <div class="mb-3">
        <label asp-for="DisplayOrder"></label>
        <input asp-for="DisplayOrder" class="form-control" disabled/>
    </div>
    <div class="mb-3">
        <button class="btn btn-primary btn-lg" type="submit">Delete</button>
        <a asp-action="Index" asp-controller="Category" class="btn btn-secondary btn-lg">Back</a>
    </div>
</form>
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
    }