@{
    var status = Context.Request.Query["status"];

    var pending = "text-primary";
    var inprocess = "text-primary";
    var complete = "text-primary";
    var approved = "text-primary";
    var all = "text-primary";

    switch (status)
    {
        case "pending":
            pending = "active text-white";
            break;
        case "complete":
            complete = "active text-white";
            break;
        case "approved": 
            approved = "active tex-white";
            break;
        case "inprocess":
            inprocess = "active text-white";
            break;
        default:
            all = "active text-white";
            break;
    }
}



<div class=" p-3">
    <div class="d-flex justify-content-between">
        <div class="p-2">
            <h2 class="text-primary">Order List</h2>
        </div>
        <div class="p-2">
            <ul class="list-group list-group-horizontal-sm">
                <a style="text-decoration:none" asp-action="Index" asp-controller="Order" asp-area="Admin" asp-route-status="inprocess">
                    <li class="list-group-item @inprocess">In process</li>
                </a>
                <a style="text-decoration:none" asp-action="Index" asp-controller="Order" asp-area="Admin" asp-route-status="pending">
                <li class="list-group-item @pending">Payment Pending</li>
                </a>
                <a style="text-decoration:none" asp-action="Index" asp-controller="Order" asp-area="Admin" asp-route-status="approved">
                <li class="list-group-item @approved">Approved</li>
                </a>
                <a style="text-decoration:none" asp-action="Index" asp-controller="Order" asp-area="Admin" asp-route-status="complete">
                <li class="list-group-item @complete">Complete</li>
                </a>
                <a style="text-decoration:none" asp-action="Index" asp-controller="Order" asp-area="Admin" asp-route-status="All">
                <li class="list-group-item @all">All</li>
                </a>
            </ul>
        </div>

    </div>
    <br /><br />
    <table class="table table-bordered table-striped" style="width:100%" id="orderTable">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Order Total</th>
                <th>Payment Status</th>
                <th>Email</th>
                <th>Phone Number</th>
                <th></th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts{
    <script src="~/js/order.js"></script>
}
