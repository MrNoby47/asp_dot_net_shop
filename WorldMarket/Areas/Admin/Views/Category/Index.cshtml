@model IEnumerable<Category>

   <div class="container p-3">
    <div class="row p-3 mt-4">
        <div class="col-6">
            <h2 class="text-primary">Category</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-action="Create" asp-controller="Category"  asp-area="Admin" class="btn btn-primary">Create New Category&nbsp;<i class="bi bi-plus-circle"></i></a>
        </div>
    </div>
    <br /><br />
    <table class="table table-bordered table-striped" style="width:100%;">
        <thead>
            <tr>
                <th>Name</th>
                <th>Display Order</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach(var cat in Model)
            {
                <tr>
                    <td width="20%">@cat.Name</td>
                    <td width="50%">@cat.DisplayOrder</td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a class="btn btn-primary mx-2" asp-action="Edit" asp-controller="Category" asp-area="Admin" asp-route-id="@cat.Id"><i class="bi bi-pencil-square"></i></a>
                            <a class="btn btn-secondary mx-2" asp-action="Delete" asp-controller="Category" asp-area="Admin" asp-route-id="@cat.Id"><i class="bi bi-trash-fill"></i></a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>